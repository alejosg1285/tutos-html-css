@model Vidly.Models.Movie

@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.DateRelease.ToLongDateString()</li>
    <li>Added Date: @Model.DateAdded.ToLongDateString()</li>
    <li>Number In Stock: @Model.NumberInStock</li>
</ul>