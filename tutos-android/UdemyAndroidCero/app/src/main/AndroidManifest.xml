<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.cliente.udemyandroidcero"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:name=".App.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_checklist"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_checklist"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Activities.ListViewActivity"/>
        <activity android:name=".Activities.RecyclerViewActivity"/>
        <activity android:name=".Activities.RealmActivity"/>
        <activity android:name=".Activities.NoteActivity"/>
        <activity android:name=".Activities.FragmentActivity">
        </activity>
        <activity android:name=".Activities.DetailsActivity">
        </activity>
    </application>

</manifest>